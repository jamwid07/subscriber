{% extends 'base.html.twig' %}

{% block title %}User onboarding{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('onboarding') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('onboarding') }}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Onboarding new user - {{ step }}</h2>
                </div>
                <div class="card-body">
                    {% block form %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
